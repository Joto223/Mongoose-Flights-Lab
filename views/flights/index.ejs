<%- include('../partials/header') %>

<body>
  <h1>Flight List</h1>
  <table>
      <thead>
          <tr>
              <th>Airline</th>
              <th>Flight Number</th>
              <th>Departs</th>
              <th>Airport</th>
              <th>Details</th>
              
          </tr>
      </thead>
      <tbody>
          <% flights.forEach(function(f) { %>
              <tr>
                  <td><%= f.airline %> </td>
                  <td><%= f.flightNo %></td>
                  <td><%= f.departs %></td>
                  <td><%= f.airport %></td>
                  <td><a href="/flights/<%= f._id %>">DETAILS</a></td>

              </tr>
          <% }); %>
      </tbody>
  </table>


  <%- include('../partials/footer') %>
